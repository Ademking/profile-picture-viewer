{
    "manifest_version": 2,
    "name": "Profile Picture Viewer",
    "version": "1.0.9",
    "description": "Profile Picture Viewer",
    "page_action": {
        "default_icon": "icons/19.png",
        "default_title": "Unlock full size profile picture"
    },
    "author": "Adem Kouki",
    "permissions": [
        "contextMenus",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.tiktok.com/*",
        "https://www.messenger.com/t/*"
    ],
    "background": {
        "scripts": [
            "contextmenu.js",
            "facebook.js",
            "instagram.js",
            "tiktok.js"
        ]
    },
    "homepage_url": "https://github.com/Ademking/fb-profile-picture-viewer",
    "offline_enabled": false,
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
